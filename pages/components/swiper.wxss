.banner {
  height: 400rpx;
  background-color: #ddd;
}

.bg-blue {
  background-color: #87cefa;
}

.bg-red {
  background-color: #ff6374;
}

.bg-green {
  background-color: #43cd80;
}

.customSwiper {
  height: 360rpx;
  position: relative;
}

.customSwiper .swiper {
  height: 100%;
}

.tab {
  height: 70rpx;
  position: absolute;
  bottom: 0;
  display: flex;
  width: 100%;
  text-align: center;
  justify-content: center;
  align-items: center;
}

.tab .tab-item {
  background-color: #ccc;
  height: 50rpx;
  width: 50rpx;
  line-height: 50rpx;
  font-size: 12rpx;
  color: #fff;
  border-radius: 4px;
  margin-right: 10rpx;
}

.tab .tab-item.selected {
  background-color: red;
}
